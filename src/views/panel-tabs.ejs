        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-head-line">Product Management</h1>
                        <h1 class="page-subhead-line">This is dummy text, you can replace it with your original text.</h1>
                    </div>
                </div>
                <!-- /. ROW  -->
        
                <a href="/add-post" class="btn btn-primary my-3">+ New Product</a>
                <hr />
        
                <div class="container">
                    <% data.forEach(Product => { %>
                    <div class="row align-items-center mb-3 product-item">
                        
                        
                        <div class="col-md-2">
                            <img src="/images/<%= Product.image %>" alt="<%= Product.name %>" class="product-image img-thumbnail">
                        </div>
        
                        <!-- Tên sản phẩm -->
                        <div class="col-md-3">
                            
                                <%= Product.name %> 
                            
                        </div>
        
                        <!-- Giá sản phẩm -->
                        <div class="col-md-2">
                            <span class="product-price">$<%= Product.price %></span>
                        </div>
        
                        <!-- Nút chỉnh sửa và xóa -->
                        <div class="col-md-5 text-right">
                            <a href="/edit-post/<%= Product._id %>" class="btn btn-warning mr-2">Edit</a>
                            <form action="/delete-post/<%= Product._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </form>
                        </div>
                    </div>
                    <% }) %>
                </div>
        
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-head-line">Product Management</h1>
                        <h1 class="page-subhead-line">This is dummy text, you can replace it with your original text.</h1>
                    </div>
                </div>
                <!-- /. ROW  -->
        
                <a href="/add-post" class="btn btn-primary my-3">+ New Product</a>
                <hr />
        
                <div class="container">
                    <% data.forEach(Product => { %>
                    <div class="row align-items-center mb-3 product-item">
                        <!-- Tên sản phẩm -->
                        <div class="col-md-4">
                            <a href="/Product/<%= Product._id %>" class="product-name">
                                <%= Product.name %> &nearr;
                            </a>
                        </div>
                        
                        <!-- Giá sản phẩm (có thể bổ sung thêm) -->
                        <div class="col-md-2">
                            <span class="product-price">$<%= Product.price %></span>
                        </div>
        
                        <!-- Nút chỉnh sửa và xóa -->
                        <div class="col-md-6 text-right">
                            <a href="/edit-post/<%= Product._id %>" class="btn btn-warning mr-2">Edit</a>
                            <form action="/delete-post/<%= Product._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </form>
                        </div>
                    </div>
                    <% }) %>
                </div>
        
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        
